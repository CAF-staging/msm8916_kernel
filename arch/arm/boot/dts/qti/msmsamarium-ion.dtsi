&soc {
	qti,ion {
		compatible = "qti,msm-ion";
		#address-cells = <1>;
		#size-cells = <0>;

		qti,ion-heap@25 {
			reg = <25>;
			qti,ion-heap-type = "SYSTEM";
		};

		qti,ion-heap@21 {
			reg = <21>;
			qti,ion-heap-type = "SYSTEM_CONTIG";
		};

		qti,ion-heap@23 { /* OTHER PIL HEAP */
			compatible = "qti,msm-ion-reserve";
			reg = <23>;
			qti,heap-align = <0x1000>;
			qti,memory-fixed = <0x05900000 0x2200000>;
			qti,ion-heap-type = "CARVEOUT";
		};

		qti,ion-heap@26 { /* MODEM HEAP */
			compatible = "qti,msm-ion-reserve";
			reg = <26>;
			qti,heap-align = <0x1000>;
			qti,memory-fixed = <0x08000000 0x5100000>;
			qti,ion-heap-type = "CARVEOUT";
		};

		qti,ion-heap@28 { /* AUDIO HEAP */
			compatible = "qti,msm-ion-reserve";
			reg = <28>;
			qti,heap-align = <0x1000>;
			qti,memory-reservation-type = "EBI1"; /* reserve EBI memory */
			qti,memory-reservation-size = <0x614000>;
			qti,ion-heap-type = "CARVEOUT";
		};
	};
};
